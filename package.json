{
    "name": "mentalink-monorepo",
    "private": true,
    "workspaces": [
        "frontend"
    ],
    "scripts": {
        "dev:web": "npm run dev -w frontend",
        "dev:api": "cd backend && ./venv/bin/uvicorn app.main:app --reload --host 127.0.0.1 --port 8000",
        "predev": "kill-port 3000 3001 8000 && rm -f frontend/.next/dev/lock",
        "dev": "concurrently -n web,api \"npm run dev:web\" \"npm run dev:api\""
    },
    "devDependencies": {
        "concurrently": "^9.0.0",
        "kill-port": "^2.0.1"
    }
}